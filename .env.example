# ===========================================
# A Startup Biz - Environment Variables
# ===========================================

# Database (Neon PostgreSQL)
DATABASE_URL=postgresql://user:password@host.neon.tech/database?sslmode=require

# Supabase (Optional - for additional database features)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Clerk Authentication
# Set NEXT_PUBLIC_CLERK_ENABLED=true ONLY after configuring Clerk app for your domain
NEXT_PUBLIC_CLERK_ENABLED=false
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_SECRET_KEY=sk_test_...
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/onboarding

# Stripe Payments
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Stripe Connect (Partner Payouts)
# Optional: Use same webhook secret or create separate endpoint
STRIPE_CONNECT_WEBHOOK_SECRET=whsec_...

# Resend Email
RESEND_API_KEY=re_...
EMAIL_FROM="A Startup Biz <noreply@astartupbiz.com>"
SUPPORT_EMAIL=support@astartupbiz.com
ADMIN_EMAIL=admin@astartupbiz.com

# HubSpot CRM
HUBSPOT_API_KEY=pat-na1-...
HUBSPOT_PORTAL_ID=your-portal-id

# Upstash Redis (Rate Limiting)
UPSTASH_REDIS_REST_URL=https://...upstash.io
UPSTASH_REDIS_REST_TOKEN=...

# Sentry Error Tracking
NEXT_PUBLIC_SENTRY_DSN=https://...@...ingest.sentry.io/...
SENTRY_DSN=https://...@...ingest.sentry.io/...
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=a-startup-biz
SENTRY_AUTH_TOKEN=sntrys_...

# FireCrawl Web Scraping (Partner Microsites)
FIRECRAWL_API_KEY=fc-...

# n8n Automation
N8N_WEBHOOK_SECRET=your-secure-webhook-secret
N8N_HOST=https://your-n8n-instance.app.n8n.cloud

# Twilio (SMS + Voice)
TWILIO_ACCOUNT_SID=AC...
TWILIO_AUTH_TOKEN=...
TWILIO_PHONE_NUMBER=+1...

# ===========================================
# LiveKit Voice Calls (Choose ONE option)
# ===========================================

# OPTION A: Self-Hosted (Recommended for cost savings)
# See docs/LIVEKIT_SELF_HOSTED_GUIDE.md for setup
LIVEKIT_HOST=wss://livekit.yourdomain.com
LIVEKIT_API_KEY=APIyourkey
LIVEKIT_API_SECRET=your-generated-secret-from-openssl-rand-base64-32

# OPTION B: LiveKit Cloud (Managed service)
# Sign up at cloud.livekit.io
# LIVEKIT_HOST=wss://your-project.livekit.cloud
# LIVEKIT_API_KEY=APIxxxxxxxx
# LIVEKIT_API_SECRET=your-cloud-api-secret

# ===========================================
# AI Voice Agent (Required for AI support calls)
# ===========================================
OPENAI_API_KEY=sk-...

# ===========================================
# Call Recording Storage (Optional)
# ===========================================

# Option 1: AWS S3
LIVEKIT_RECORDING_BUCKET=your-recordings-bucket
LIVEKIT_RECORDING_REGION=us-east-1
AWS_ACCESS_KEY_ID=AKIA...
AWS_SECRET_ACCESS_KEY=...

# Option 2: Self-Hosted MinIO (S3-compatible)
# AWS_ENDPOINT=http://minio.yourdomain.com:9000
# LIVEKIT_RECORDING_BUCKET=recordings
# AWS_ACCESS_KEY_ID=minio-admin
# AWS_SECRET_ACCESS_KEY=minio-secret

# Web Push Notifications (VAPID keys)
# Generate with: npx web-push generate-vapid-keys
NEXT_PUBLIC_VAPID_PUBLIC_KEY=...
VAPID_PRIVATE_KEY=...
VAPID_SUBJECT=mailto:support@astartupbiz.com

# Dropbox Sign (HelloSign) - Document Signing
DROPBOX_SIGN_API_KEY=...
DROPBOX_SIGN_CLIENT_ID=...
# Document Templates (optional - create these in Dropbox Sign dashboard)
DROPBOX_SIGN_TEMPLATE_PARTNER_AGREEMENT=...
DROPBOX_SIGN_TEMPLATE_SERVICE_CONTRACT=...
DROPBOX_SIGN_TEMPLATE_NDA=...

# Application
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development
